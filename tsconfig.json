{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["ES2020"],
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", ".vscode-test"]
}
